  <script>
    const burgerMenu = document.getElementById('burger-menu');
    const menuItems = document.getElementById('menu-items');
    const profileImage = document.getElementById('profile-image');

    burgerMenu.addEventListener('click', () => {
      menuItems.style.display = menuItems.style.display === 'flex' ? 'none' : 'flex';
      menuItems.style.transform = menuItems.style.display === 'flex' ? 'translateX(0)' : 'translateX(100%)';
    });

    document.getElementById('dark-toggle').addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
    });

    // Add hover effect for profile image
    profileImage.addEventListener('mouseenter', () => {
      profileImage.classList.add('animate-bounce');
    });

    profileImage.addEventListener('mouseleave', () => {
      profileImage.classList.remove('animate-bounce');
    });
  </script>
