    // Navbar Scroll Effect
window.addEventListener("scroll", function () {
    const navbar = document.getElementById("navbar");
    if (window.scrollY > 50) {
      navbar.style.background = "#e7d7c9";
    } else {
      navbar.style.background = "#e7d7c9";
    }
  });
  
  // Home Section Animation Reset on Re-entry
  const homeSection = document.getElementById("home");
  const homeText = document.querySelector(".home-text");
  const homeImage = document.querySelector(".home-image"); // ‚úÖ Your profile picture
  const socialIcons = document.querySelector(".social-icons");
  
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) {
          // üîÅ Reset styles when not in view
          homeSection.style.opacity = "0";
          homeSection.style.transform = "translateY(20px)";
          homeText.style.opacity = "0";
          homeText.style.transform = "translateX(-50px)";
  
          // üîÅ Remove bounce animation when leaving view
          homeImage.classList.remove("animate-bounce"); // ‚úÖ REMOVE class to reset
          homeImage.style.opacity = "0";
          homeImage.style.transform = "translateX(50px)";
  
          socialIcons.style.opacity = "0";
          socialIcons.style.transform = "translateX(-50px)";
        } else {
          setTimeout(() => {
            // ‚úÖ When re-entering, apply styles and bounce class
            homeSection.style.opacity = "1";
            homeSection.style.transform = "translateY(0)";
            homeText.style.opacity = "1";
            homeText.style.transform = "translateX(0)";
  
            homeImage.classList.add("animate-bounce"); // ‚úÖ ADD bounce+slide class
            // Don't need to manually set opacity/transform anymore, the animation handles it
  
            socialIcons.style.opacity = "1";
            socialIcons.style.transform = "translateX(0)";
          }, 100);
        }
      });
    },
    { threshold: 0.5 } // üëÅÔ∏è Trigger when 50% of the section is visible
  );
  
  observer.observe(homeSection);
  